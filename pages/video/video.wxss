/* pages/video/video.wxss */
.movie{
    position: fixed;  
   top: 0;
}
.movie video{
    width: 100%;
    position: fixed; 
}
.hidden{
  display: none;
}
.movie-scroll{
  width: 100%;
  position: fixed; 
  top: 225px;
  overflow: scroll;
  height: 375px;
  padding: 5px
}
.movie-title{
  font-size: 16px;
  font-weight: 700;
  color: #000;
  height: 30px;
  line-height: 30px;
}
.movie-title image{
  width:32px;
  height:32px;
  float:right;
  margin-right:4%;

}
.movie-cate,.movie-start,.movie-info{
  font-size: 12px;
  color: #666666;
  padding: 2px;
}
.movie-play{
  font-size: 13px;
  width: 20%;
  float: left;
  padding: 5px;
  height: 30px; 
  line-height: 30px; 
  overflow: hidden; 
  border-radius: 5px;
  margin: 2px 2px 5px 2px;
  text-align: center
}
.movie-play-select-no{
  background-color: #E8F2FC;
  border: 1px #E8F2FC solid;
}
.movie-play-select{
  background-color: #e0e0e0;
  border: 1px #e0e0e0 solid;
}
.movie-sel,.is-like-title{
  font-size: 18px;
  color: #000;
  font-weight: bold;
  border-top:0.1px rgba(0, 0, 0, 0.1) solid;
  margin: 10px 0px;
  padding-top: 5px;
  width: 100%;
}
.bottom-view{
  margin-bottom: 20px;
  position: relative;
  width: 100%;
  height: auto;
  float: left;
}
.movie-num{
  /* margin-bottom: 20px; */
  position: relative;
  width: 100%;
  height: auto;
  float: left;
}
.is-like-list{
  width:47%;
  float:left;
  text-align: center;
  background-color: #fff;
  margin-left: 8px;
  margin-top: 10px;
  border-radius: 10px; 
}
.is-like-list image{
  width: 100%; 
  height: 200px;
  text-align: center;
  border-top-left-radius: 10px;
  border-top-right-radius: 10px;
}
.is-like-list-bottom{
  width: 100%;
  text-align: center;
  /* padding: 10px; */
  position: relative;
  float: left;
  color: #666666;
  margin-bottom: 20px;
}
.is-like-view{
  width: 97%;
  height: 800px;
  background-color: #e8f2fc;
}
.is-like-name{
  height: 25px;
  line-height: 25px;
  overflow: hidden;
  width: 95%;
  margin-left: 5%;
  text-align: left;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-size: 14px;
  color: #333;
}
.movie-thunder{
  /* margin-bottom: 20px; */
  position: relative;
  width: 100%;
  height: auto;
  float: left;
}
.movie-thunder-title{
    font-size: 16px;
    font-weight: 700;
    color: #000
}
.movie-thunder-list{
  width: 100%;
  margin: 2px;
  font-size: 14px;
  margin-top: 10px;
  float: left;
}
.thunder-num{
  width:18%;
  float:left;
}
.thunder-copy{
  width:60%;
  float:left;
}
.thunder-btn{
  width:15%;
  float:left;
  margin-left:10px;
}
.thunder-btn view{
  padding:2px 2px 2px 2px;
  padding-left:2px;
  padding-right:2px;
  font-size:14px;
  border-radius:15px;
  border:1px rgba(0, 0, 0, 0.1) solid;
  text-align:center;

}