/**index.wxss**/
.infolist{
  width: 100%;
  margin-top:30px;
  height:100%;
}
.cc6{
  font-size: 12px;
  color: #666;
}
.cc3{
  color: #333;
  font-size: 14px;
}
.hidden{
  display: none
}
page{
  background-color: #e8f2fc;
}
.bottom-view{
  height: 100%;
  width: 750rpx;
  position: fixed; 
  background-color: #AEEEEE;
  transition: All 0.6s ease; 
  -webkit-transition: All 0.6s ease;
  z-index: 0;
}
.top-view{
  height: 100%;
  position: fixed;
  width: 750rpx;
  background-color: #e8f2fc; 
  z-index: 0;
  transition: All 0.6s ease; 
  -webkit-transition: All 0.6s ease;
  overflow: scroll;
}
.infolist-list{
  width:47%;
  float:left;
  /* padding: 1px; */
  text-align: center;
  background-color: #fff;
  margin-left: 8px;
  margin-top: 10px;
  border-radius: 10px; 
}
.infolist-list image{
   width: 100%; 
   height: 200px;
   text-align: center;
   border-top-left-radius: 10px;
   border-top-right-radius: 10px;
}
.float-btn-box{
  position: fixed;
  top: 90%;
  right: 0;
  background-color: rgba(0, 0, 0, 0.1); 
  color: #fff; 
  width: 32px;
  height: 32px;
  line-height: 32px;
}
.float-btn-box2{
  position: fixed;
  top: 85%;
  right: 0;
  background-color: rgba(0, 0, 0, 0.5); 
  color: #fff; 
  width: 100px;
  height: 25px;
  line-height: 25px;
  padding:4px 0px;
}
.float-btn-box image,.float-btn-box2 image{
  width: 25px;
  height: 25px;
  color: #fff;
  margin-right: 7px;
}
.float-btn-box2 navigator {
  display: inline;
}
.movie-name{
  height: 25px;
  line-height: 25px;
  overflow: hidden;
  width: 95%;
  margin-left: 5%;
  text-align: left;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.bt-margin{
  margin-bottom: 5px;
}
.top-search{
  width: 100%;
  text-align: center;
  position: fixed;
  background-color: #fff;
  height: 30px;
  line-height: 30px;
  z-index: 9;
}
.top-search-input{
  width: 63%;
  border: 1px solid rgba(0, 0, 0, 0.3);
  margin-left: 1%; 
  border-radius: 15px;
  height:23px;
  line-height:23px;
  float: left;
}
.top-search-btn{
  width:20%;
  border:1px solid rgba(0, 0, 0, 0.3);
  margin-left:1px; 
  border-radius:15px;
  height:23px;
  line-height:23px;
  float:left;
}
.top-search-cate{
  width: 10%;
  float: left;
  font-size: 14px;
}
.top-search-cate image{
  width:24px;
  height:24px;
  display:inline-block;
  overflow:hidden;
}
.bottom-view-img image{
  width:24px;
  height:24px;
  display:inline-block;
  overflow:hidden;
  margin-left:42%;
  margin-top:5px;
}
.c-state1{ 
 transform: rotate(0deg) scale(1) translate(50%,0%);  
 -webkit-transform: rotate(0deg) scale(1) translate(50%,0%);  
}
.bottom-view-list{
  width: 50%;
  text-align: center;
  color: #333;
  height: 30px;
  line-height: 30px;
  font-size: 18px;
}
.left-color{
  color: #fff !important;
}
.no-movie{
  position: fixed;
  top: 35%;
  text-align: center;
}
.no-movie-img image{
  width: 64px;
  height: 64px;
}
.no-movie-title{
  width: 100%;
  text-align: center;
}
.mask-layer{
  position: fixed;
  z-index: 99;
  height: 100%;
  width: 100%;
}